<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_settingFilters"
            app:destination="@id/settingFilters"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_searchFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />

    </fragment>
    <fragment
        android:id="@+id/settingFilters"
        android:name="ru.practicum.android.diploma.filters.ui.fragment.SettingFiltersFragment"
        android:label="fragment_setting_filters"
        tools:layout="@layout/fragment_setting_filters">
        <action
            android:id="@+id/action_settingFilters_to_fragmentChooseFilter"
            app:destination="@id/fragmentChooseFilter"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_settingFilters_to_fragmentPlaceOfWork"
            app:destination="@id/fragmentPlaceOfWork"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_settingFilters_to_searchFragment"
            app:destination="@+id/searchFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/fragmentChooseFilter"
        android:name="ru.practicum.android.diploma.filters.ui.fragment.ChooseFilterFragment"
        android:label="fragment_choose_filter"
        tools:layout="@layout/fragment_filter_selection" />
    <fragment
        android:id="@+id/fragmentFavourite"
        android:name="ru.practicum.android.diploma.favourite.ui.FragmentFavourite"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_fragmentFavourite_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.details.presentation.ui.VacancyFragment"
        android:label="fragment_vacancy"
        tools:layout="@layout/fragment_vacancy">
        <action
            android:id="@+id/action_vacancyFragment_to_similarVacancyFragment"
            app:destination="@id/similarVacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/similarVacancyFragment"
        android:name="ru.practicum.android.diploma.details.presentation.ui.SimilarVacancyFragment"
        android:label="fragment_similar_vacancy"
        tools:layout="@layout/fragment_similar_vacancy">
        <action
            android:id="@+id/action_similarVacancyFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPlaceOfWork"
        android:name="ru.practicum.android.diploma.filters.ui.fragment.PlaceOfWorkFragment"
        android:label="fragment_place_of_work"
        tools:layout="@layout/fragment_place_of_work">
        <action
            android:id="@+id/action_fragmentPlaceOfWork_to_fragmentChooseFilter"
            app:destination="@id/fragmentChooseFilter"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
</navigation>